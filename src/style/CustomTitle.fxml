<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="style.CustomTitleBarController">
    <AnchorPane prefHeight="40.0" prefWidth="600.0" style="-fx-background-color: #2B2B2B;">
        <Label text="My Application" layoutX="10" layoutY="10" style="-fx-text-fill: white; -fx-font-size: 14px;" />
        <HBox spacing="10" layoutX="520" layoutY="5">
            <Button fx:id="minimizeBtn" text="—" styleClass="control-button" />
            <Button fx:id="maximizeBtn" text="□" styleClass="control-button" />
            <Button fx:id="closeBtn" text="✕" styleClass="control-button-close" />
        </HBox>
    </AnchorPane>
</AnchorPane>